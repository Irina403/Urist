.popup__wrapper
    margin 45px
.popup__wrapper
    &::before
        content url('../images/elipse-blue.png')
        display block
        position absolute
        left 0
.popup-close
    position absolute
    top 15px
    right 40px
    cursor pointer
.popup-fade__text
    position relative
    padding-top 45px
    padding-bottom 30px
    font-size countFontSize(35)
    font-family $ff2
    text-transform uppercase
.popupBox
    position relative
    width 102%
    left -1%
    right -1%
    background-color #fff
    background-image url(../images/modal-background.png)
    background-repeat no-repeat
    background-position 90% 0%
    border-radius 20px
    box-shadow: 0px 17px 92px rgba(12, 21, 103, 0.1);
    margin-top countVW(80)
    display flex
    &__subtitle
        font-size countFontSize(23)
        font-family $ff3
        color $style1
    &__text
        margin-top countVW(30)
        font-size countFontSize(20)
        font-family $ff3
        line-height 152%
    &__btn
        margin-top countVW(30)
        display flex
        align-items center
        justify-content center
        background-color $style1
        border-radius 20px
        width 211px
        height 59px
    &__link
        font-size 20px
        color #fff
        font-family $ff
    &__right
        width 100%
        margin-top -100px
.popupBox__left
    padding 50px

.popupPrice
    position relative
    padding 50px
    &::before
        content url('../images/orange-modal.png')
        display block
        position absolute
        left 0
        top 0   
    &__box
        // max-width 1200px
        // display flex
        // justify-content space-between
    &__subtitle
        position inherit
        font-size countFontSize(35)
    &__list
        width 100% 
        
        &::after
            position absolute
            content ''
            display block
            background-color $style2
            height 85%
            width 1px
            top 10%
            right 300px
            xs(display, none)
    &__item
        margin-top countVW(40)
        font-size 20px
        font-family $ff
      
    &__priceItem
        margin-top countVW(20)
        font-size 20px
        font-family $ff
        color $style1
    &__element 
        width 100%
        align-items center
        display flex
        justify-content space-between
        xs(flex-direction, column)
        xs(align-items, flex-start)