.popup-fade
    display none
.myOverlay 
    z-index: 9999;
    position: fixed;
    background-color: rgba(0,0,0,.7);
    width: 100%; height: 100%;
    top: 0; left: 0;
    cursor :pointer;
    display :none;
.myModal {
    position fixed
    top 50%
    left 50%
    width: 1100px
    max-width 100vw
    max-height: 80vh
    transform translate(-50%, -50%)
    background-color #fff
    border-radius 50px
    z-index 999999
    opacity 2
    box-shadow: 0px 17px 92px rgba(12, 21, 103, 0.34);
    overflow-y scroll
}
